@model DiaryEntryViewModel

<h2>Add Diary Entry</h2>
<form asp-controller="DiaryEntry" asp-action="AddRecipeEntry" method="post">
    <input type="hidden" id="AppUserId" name="AppUserID" asp-for="AppUserId"></input>
    <input type="hidden" asp-for="AvailableRecipes" value="@Json.Serialize(Model.AvailableRecipes)">
    <input type="hidden" asp-for="DiaryDate" value="@Model.DiaryDate.Date">
    <input type="hidden" asp-for="DiaryId" />

    <label for="selectedRecipeId">Recipe:</label>
    <select id="selectedRecipeId" name="SelectedRecipeId" class="form-control">
        <option value="">Select a recipe...</option>
        @foreach (var recipe in Model.AvailableRecipes)
        {
            <option value="@recipe.Id">@recipe.Name</option>
        }
    </select>

    <label for="quantity">Grams:</label>
    <input type="number" id="quantity" name="Quantity" required class="form-control">

    <button type="submit" class="btn btn-primary">Add Entry</button>
</form>