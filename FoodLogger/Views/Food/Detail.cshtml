@model Food

<section class="performance-facts">
    <header class="performance-facts__header">
        <h1 class="performance-facts__title">@Model.Name</h1>
        <h2 class="performance-facts__title">Nutrition Facts</h2>
    </header>
    <table class="performance-facts__table">
        <thead>
            <tr>
                <th colspan="3" class="small-info">
                    Per 100g
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th colspan="2">
                    <b>Calories</b>
                    <br>
                    @Model.Calories
                </th>
            </tr>
            <tr class="thick-row">
            </tr>
            <tr>
                <th colspan="2">
                    <b>Fat</b>
                    <br>
                    @Model.Fat
                </th>
            </tr>
            <tr>
                <th colspan="2">
                    <b>Carbohydrate</b>
                    <br>
                    @Model.Carbs
                </th>
            </tr>
            <tr class="thick-end">
                <th colspan="2">
                    <b>Protein</b>
                    <br>
                    @Model.Protein
                </th>
            </tr>
        </tbody>
    </table>
</section>