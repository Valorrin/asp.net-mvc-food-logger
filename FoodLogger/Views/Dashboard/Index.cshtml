@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

@model DashboardViewModel

<h1 class="display-4 fw-normal">Your Dashboard</h1>
<div class="dashboard-buttons">
    <a class="btn btn-primary" asp-area="" asp-controller="Food" asp-action="Create">Create Food</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Food" asp-action="Create">Create Recipe</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Food" asp-action="Index">Foods</a>
    <a class="btn btn-primary" asp-area="" asp-controller="Recipe" asp-action="Index">Recipes</a>
</div>
<div class="container">
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered dashboard-table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Food Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Calories (100g)</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                @{
                    int total = 1;
                }
                @foreach (var food in Model.Foods)
                {
                    <tbody>
                        <tr>
                            <th scope="row">@(total++)</th>
                            <td>@food.Name</td>
                            <td>@food.FoodCategory</td>
                            <td>@food.Calories</td>
                            <td>
                                <a class="btn btn-info btn-sm" asp-controller="Food" asp-action="Detail" asp-route-id="@food.Id"><i class="far fa-eye"></i> Detail</a>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a class="btn btn-success btn-sm" asp-controller="Food" asp-action="Edit" asp-route-id="@food.Id"><i class="fas fa-edit"></i> Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Food" asp-action="Delete" asp-route-id="@food.Id"><i class="far fa-trash-alt"></i> Delete</a>
                                }
                            </td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>

<style>
    .dashboard-buttons {
        margin-bottom: 20px;
    }

    .dashboard-table th,
    .dashboard-table td {
        vertical-align: middle;
    }

    .dashboard-table th {
        width: 5%;
    }
</style>