@model IEnumerable<Recipe>

<a class="btn btn-primary" asp-area="" asp-controller="Recipe" asp-action="Create">Create Recipe</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Recipe Name</th>
            <th scope="col">Calories</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    @{
        int total = 1;
    }
    @foreach (var recipe in Model)
    {
        <tbody>
            <tr>
                <th scope="row">@(total++)</th>
                <td>@recipe.Name</td>
                <td>@recipe.CalculateCalories kcal</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Food" asp-action="Detail" asp-route-id="@recipe.Id"><i class="far fa-eye"></i> Detail</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-success btn-sm" asp-controller="Food" asp-action="Edit" asp-route-id="@recipe.Id"><i class="fas fa-edit"></i> Edit</a>
                        <a class="btn btn-danger btn-sm" asp-controller="Food" asp-action="Delete" asp-route-id="@recipe.Id"><i class="far fa-trash-alt"></i> Delete</a>
                        <form asp-controller="Recipe" asp-action="Delete" asp-route-id="@recipe.Id" onsubmit="return confirm('Are you sure you want to delete this entry?')">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="far fa-trash-alt"></i> Delete</button>
                        </form>
                    }
                </td>
            </tr>
        </tbody>
    }
</table>